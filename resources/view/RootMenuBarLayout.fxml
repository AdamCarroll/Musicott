<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<MenuBar fx:id="rootMenuBar" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.transgressoft.musicott.view.RootMenuBarController">
<menus>
  <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
    <items>
      <MenuItem fx:id="openFileMenuItem" mnemonicParsing="false" text="Open File(s)..." />
      <MenuItem fx:id="importFolderMenuItem" mnemonicParsing="false" text="Import Folder..." />
          <MenuItem fx:id="importItunesMenuItem" mnemonicParsing="false" text="Import from iTunes Library..." />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem fx:id="newPlaylistMenuItem" mnemonicParsing="false" text="Add new playlist" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem fx:id="preferencesMenuItem" mnemonicParsing="false" text="Preferences" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close" />
    </items>
  </Menu>
  <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
       <items>
      <MenuItem fx:id="editMenuItem" mnemonicParsing="false" text="Edit" />
          <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" text="Delete" />
          <SeparatorMenuItem mnemonicParsing="false" />
          <MenuItem fx:id="selectAllMenuItem" mnemonicParsing="false" text="Select all" />
          <MenuItem fx:id="dontSelectAllMenuItem" mnemonicParsing="false" text="Don't select all" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="findMenuItem" mnemonicParsing="false" text="Find" />
       </items>
  </Menu>
  <Menu fx:id="controlsMenu" mnemonicParsing="false" text="Controls">
    <items>
            <MenuItem fx:id="playPauseMenuItem" mnemonicParsing="false" text="Pause" />
